{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Average Malaysian Ringgit Exchange Rates (2024)",
    "color": "black",
    "fontSize": 30,
    "font": "Helvetica Neue",
    "fontWeight": "bold"
  },
  "width": 1100,
  "height": 600,
  "projection": {
    "type": "naturalEarth1"
  },
  "params": [
    {
      "name": "zoom",
      "value": 200,
      "bind": {
        "input": "range",
        "min": 200,
        "max": 1000,
        "step": 20,
        "name": "Zoom: "
      }
    },
    {
      "name": "center",
      "value": [0, 0],
      "bind": {
        "input": "select",
        "options": [
          [0, 0],
          [100, 0],
          [-100, 0],
          [0, 50],
          [0, -50]
        ],
        "labels": ["Center", "East", "West", "North", "South"],
        "name": "Map Center: "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/nvkelso/natural-earth-vector/master/geojson/ne_110m_ocean.geojson",
        "format": {"type": "json"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "skyblue"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/nvkelso/natural-earth-vector/master/geojson/ne_110m_graticules_30.geojson",
        "format": {"type": "json"}
      },
      "mark": {
        "type": "geoshape",
        "stroke": "#888",
        "strokeWidth": 0.5,
        "fill": null
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/k-cmy/FIT3179-HW-WK-9-WK-10/main/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/k-cmy/FIT3179-DV2/main/Datasets/avg_exchange_rates_2024.csv"
            },
            "key": "country",
            "fields": ["exchange_rate", "currency_code"]  
          }
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "white",
        "strokeWidth": 0.5
      },
      "encoding": {
        "color": {
          "field": "exchange_rate",
          "type": "quantitative",
          "scale": {
            "type": "log",
            "domain": [0.1, 0.5, 1, 5, 10, 50, 100, 1000, 3000],
            "range": ["#ffffcc", "#ffeda0", "#fed976", "#feb24c", "#fd8d3c", "#f03b20", "#bd0026", "#800026"],
            "clamp": true
          },
          "legend": {
            "title": "Exchange Rate (Currency per 1 MYR)",
            "clipHeight": 10,
            "gradientLength": 500,
            "format": ".4f",
            "orient": "bottom",
            "offset": 10,
            "titleLimit": 300,
            "titleFontSize": 16,
            "labelFontSize": 16,
            "direction": "horizontal"
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "exchange_rate", "type": "quantitative", "title": "Avg Exchange Rate (MYR)", "format": ".4f"},
          {"field": "currency_code", "type": "nominal", "title": "Currency Code"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/k-cmy/FIT3179-HW-WK-9-WK-10/main/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/k-cmy/FIT3179-DV2/main/Datasets/avg_exchange_rates_2024.csv"
            },
            "key": "country",
            "fields": ["exchange_rate"]
          }
        },
        {
          "filter": "datum.exchange_rate === null"
        },
        {
          "calculate": "'No data available'", "as": "noDataText"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "#cccccc",
        "stroke": "white",
        "strokeWidth": 0.5
      },
      "encoding": {
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "noDataText", "type": "nominal", "title": "Exchange Rate"}
        ]
      }
    },
    {
      "data": {
        "values": [
          {"name": "North America", "latitude": 54, "longitude": -105},
          {"name": "South America", "latitude": -15, "longitude": -57},
          {"name": "Europe", "latitude": 50, "longitude": 15},
          {"name": "Africa", "latitude":12, "longitude": 20},
          {"name": "Asia", "latitude": 40, "longitude": 100},
          {"name": "Oceania", "latitude": -25, "longitude": 135}
        ]
      },
      "mark": {
        "type": "text",
        "fontSize": 14,
        "fontWeight": "bold",
        "fill": "black",
        "opacity": 0.7
      },
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "text": {"field": "name", "type": "nominal"}
      }
    }
  ],
  "config": {
    "title": {
      "color": "#black" 
    },
    "legend": {
      "titleColor": "black",  
      "labelColor": "black",
      "orient": "bottom"
    }
  },
  "view": {"stroke": null},
  "projection": {
    "type": "naturalEarth1",
    "scale": {"expr": "zoom"},
    "center": {"expr": "center"}
  }
}